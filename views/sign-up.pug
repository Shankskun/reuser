extends default

append head
    link#bootstrap-css(href='//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css', rel='stylesheet')
    link(rel='stylesheet', href='/css/sign-up_styles.css')
    script(src='//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js')
    // ---- Include the above in your HEAD tag --------
    title Bootstrap Example
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    //link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')

block content
    // if you want to create login page and register page together in one page ...you have to only chnage his name...that's it...
    .container(style='margin-top: 5%;')
      .row
        .col-sm-4  
        .col-md-4
          h1.text-center.text-success  Sign-Up
          br
          .col-sm-12
            br
            .tab-content
              form(action='#')
                .form-group
                  label(for='firstName') First Name
                  input#firstName.form-control(type='text', placeholder='John')
                .form-group
                  label(for='lastName') Last Name
                  input#lastName.form-control(type='text', placeholder='Appleseed')
                .form-group
                  label(for='email') Email address:
                  input#email.form-control.is-invalid(data-toggle='tooltip', data-placement='top', title='Tooltip on top', type='email', placeholder='name@example.com')
                  div
                    small#invalidEmail.text-danger
                      | Invalid email.
                .form-group
                  label(for='pwd') Password:
                  input#pwd.form-control.valid(type='password', placeholder='Must be at least 8 characters long')
                  div
                    small#passwordLength.text-danger
                      | Must be at least 8 characters long.
                .form-group
                  label(for='pwd') Confirm Password:
                  input#pwdConfirm.form-control.invalid(type='password', placeholder='Must be at least 8 characters long')
                  div
                    small#passwordDifferent.text-danger
                      | Password doesn't match.
              br
              button.pull-right.btn.btn-block.btn-success(href='/map')  Register 
    script.
      $(document).ready(function () {
        $("#email").focusout(function () {
          email_validator();
        })
        $("#pwd").focusout(function () {
          password_validator();
        })
        $("#pwdConfirm").focusout(function () {
         password_length_validator();
        })
        function email_validator() {
          const pattern = /^([\\w-\.]+@([\w-]+\.)+[\w-]{2,4})?$/;
          var email = $('#email').val();

            if (pattern.test(email) && email != "") {
              $('#invalidEmail').css('display', 'none');
              $('#email').removeClass('is-invalid');
              email = true;
          } else {
              $('#invalidEmail').css('display', 'block');
              $('#email').addClass('is-invalid');
          }
        }
        function password_validator() {
          const min = 8;
          var pwd = $('#pwd').val();
          if (pwd.length >= min) {
            $('#passwordLength').css('display', 'none');
            $('#pwd').removeClass('is-invalid');
            pwd = true;
          } else {
            $('#passwordLength').css('display', 'block');
            $('#pwd').addClass('is-invalid');
          }
        }
        function password_length_validator() {
          var pwd1 = $('#pwd').val();
          var pwd2 = $('#pwdConfirm').val();
          if (pwd1 === pwd2 && pwd2 != "") {
            $('#passwordDifferent').css('display', 'none');
            $('#pwdConfirm').removeClass('is-invalid');
            pwdConfirm = true;
          } else {
            $('#passwordDifferent').css('display', 'block');
            $('#pwdConfirm').addClass('is-invalid');
          }
        }
        // if(email && pwd && pwdConfirm)
        //         $('button').prop('disabled', false);
        //         // $('button').prop('disabled', true);
      });



