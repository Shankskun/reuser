extends default.pug

append head
    title Home
    link(rel='stylesheet', href='/css/home_styles.css')
    

block content

    div.main-container
        div.home-text-container
            a.home-text hundreds of people are using 
                span.reuser-text reuser
            p.home-text to help reduce their environmental footprint.    
            button.button
                span.button-text be a reuser now

        div.hp-illustration-container
            img.hp-illustration(src='images/home/hp-illustration.svg')
    br
    br
    div
        div.above-search-section
            a.above-search(href='/map') discover 
            a.above-search-separator |
            a.above-search(href='/listing') categories
        br
        div.search-section
            form.search-bar-container
                div.search-input
                    input.form-control(type='search-terms', placeholder='find something...')
                a.search-field-separator |
                img.location-pin-image(src='images/home/location-pin.png')
                div.location-input
                    input.form-control(type='location', placeholder='location')
                a.search-field-separator |
                div.distance-input
                    select.form-control(type='distance', placeholder='km')
                            option + 1 km
                            option + 2 km
                            option + 5 km
                            option +10 km
                            option +20 km
                button.btn.search-btn(type='submit')
                    img.search-btn-image(src='images/others/search-btn.png')

    br
    br
    br
    br

